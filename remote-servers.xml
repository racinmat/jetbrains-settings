<application>
  <component name="RemoteServers">
    <remote-server name="Docker" type="docker">
      <configuration>
        <option name="apiUrl" value="tcp://localhost:2375" />
        <option name="composeExecPath" value="C:\Program Files\Docker\Docker\resources\bin\docker-compose.exe" />
        <option name="pathMappings">
          <list>
            <DockerPathMappingImpl>
              <option name="localPath" value="C:\" />
              <option name="virtualMachinePath" value="/data" />
            </DockerPathMappingImpl>
          </list>
        </option>
      </configuration>
    </remote-server>
  </component>
</application>